<idea-plugin>
    <id>com.luke-ashford.ugbotdynamicresolver</id>

    <name>Referencing Resolver for UG Bot</name>

    <vendor url="https://luke-ashford.com">Luke Ashford</vendor>

    <description><![CDATA[
        Plugin for resolving dynamic imports and namespacing within the UGBot project
    ]]></description>

    <depends>com.intellij.modules.python</depends>

    <!--Register the extensions here, use the API documentation to know how to register which extensions-->
    <extensions defaultExtensionNs="Pythonid">
        <pyModuleMembersProvider implementation="resolvers.ModelsResolver"/>
        <pyModuleMembersProvider implementation="resolvers.ServicesResolver"/>
        <pyClassMembersProvider implementation="resolvers.TablesResolver"/>
    </extensions>
</idea-plugin>